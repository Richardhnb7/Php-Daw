{% extends 'base.html.twig' %}

{% block title %}Hello Ejercicio2Controller!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Producctos con letra dal comienzo y s en medio de la descripcion</h1>
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>descripcion</th>
            
        </tr>
    {%for res in consulta%}
        <tr>
            <td>
            {{res.id}}
            </td>
            <td>
            {{res.Nombre}}
            </td>
            <td>
            {{res.Descripcion}}
            </td>
        

        </tr>
    {%else%}
        <tr>
            <td>NO hay datos para mostrar</td>
        </tr>
    {% endfor %}

    
</div>
{% endblock %}
